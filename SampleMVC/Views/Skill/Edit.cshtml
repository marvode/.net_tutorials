@model SampleMVC.Data.Dtos.AddSkillDto;

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="px-8 py-6 mx-4 mt-4 text-left bg-white rounded-2xl shadow-lg md:w-1/3 lg:w-1/3 sm:w-1/3">
        <h3 class="text-2xl font-bold font-med text-center">Set Up Skill</h3>
        
        <form method="post" asp-action="Edit" asp-controller="Skill" asp-route-userId="@ViewBag.UserId">
            <div class="mt-4">
                <div>
                    <label class="label" for="Title">Title</label>
                    <input type="text" asp-for="Title" required placeholder="Enter skill title" class="input">
                    <span asp-validation-for="Title" class="text-red-500 text-xs"></span>
                </div>

                <div class="mt-4 mb-4">
                    <label class="label" for="Text">Text</label>
                    <textarea required rows="5" asp-for="Text" placeholder="Enter skill description" class="input"></textarea>
                    <span asp-validation-for="Text" class="text-red-500 text-xs"></span>
                </div>

                <div class="flex mt-4">
                    <button type="submit" class="w-full button">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>